<p id="notice"><%= notice %></p>

<h1>Listing Car Types</h1>

<table>
  <thead>
    <tr>
      <th>Car type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @car_types.each do |car_type| %>
      <tr>
        <td><%= car_type.car_type %></td>
        <td><%= link_to 'Show', car_type %></td>
        <td><%= link_to 'Edit', edit_car_type_path(car_type) %></td>
        <td><%= link_to 'Destroy', car_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

